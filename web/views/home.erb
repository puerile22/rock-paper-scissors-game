<h1 style='text-align:center;'>Rock Paper Scissors</h1>
<div class='form1'>
<h2>Log in</h2>
  <form method='post' action='/login' class="form-horizontal">
  <div>
  <label for='login'>username</label>
  <input type='text' id='login' name='name'>
  </div><div>
  <label for='login-pass'>password</label>
  <input type='password' id='login-pass' name='password'>
  </div><div>
  <input type='submit' value='login' class="btn btn-primary">
  </div>
  </form>
</div>
<div class='table'>
<h2>Leaderboard</h2>
<table class='table table-striped'>
<tr>
<th>Name</th>
<th>Wins</th>
<th>Losses</th>
</tr>
    <% @players.each do |i| %>
<tr>
    <td><%= i.name %></td>
    <td><%= i.wins %></td>
    <td><%= i.losses %></td>
</tr>
    <% end %>
</table>
</div>
<div class='form2'>
<h2>Sign up</h2>
  <form method='post' action='/signup' class="form-horizontal">
  <div>
  <label for='signup'>username</label>
  <input type='text' id='signup' name='name'>
  </div>
  <div>
  <label for='signup-pass'>password</label>
  <input type='password' id='signup-pass' name='password'>
  </div>
  <div>
  <input type='submit' value='sign up' class="btn btn-primary">
  </div>
  </form>
</div>
<style>
.form1 {
  display: inline-block;
}
.form2 {
  margin-top: 30px;
}
.table {
  height:600px;
  float:right;
  width:300px;
  overflow: auto;
}
.table h2{
  text-align: center;
}

</style>